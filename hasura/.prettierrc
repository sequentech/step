{
    "printWidth": 80,
    "tabWidth": 4,
    "useTabs": false,
    "semi": false,
    "singleQuote": false,
    "quoteProps": "consistent",
    "jsxSingleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": false,
    "bracketSameLine": false,
    "arrowParens": "always",
    "parser": "typescript",
    "endOfLine": "auto",
    "overrides": [
        {
            "files": "*.graphql",
            "options": {
                "parser": "graphql"
            }
        },
        {
            "files": ["*.json", ".prettierrc"],
            "options": {
                "parser": "json"
            }
        },
        {
            "files": ["*.yaml", "*.yml"],
            "options": {
                "parser": "yaml"
            }
        }
    ]
}
