# Dockerfile.base
FROM node:20-alpine as dependencies
WORKDIR /usr/src/app
ARG SPA_NAME

# Copiar los archivos necesarios para instalar dependencias
COPY ./package.json ./package.json
COPY ./yarn.lock ./yarn.lock
COPY ./ui-core/package.json ./ui-core/package.json
COPY ./ui-core/yarn.lock ./ui-core/yarn.lock
COPY ./ui-essentials/package.json ./ui-essentials/package.json
COPY ./ui-essentials/yarn.lock ./ui-essentials/yarn.lock
COPY ./${SPA_NAME}/package.json ./${SPA_NAME}/package.json
COPY ./${SPA_NAME}/rust/sequent-core-0.1.0.tgz ./${SPA_NAME}/rust/sequent-core-0.1.0.tgz

# Instalar dependencias
RUN yarn install --frozen-lockfile --non-interactive
RUN yarn install:ui-core --frozen-lockfile --non-interactive
RUN yarn install:ui-essentials --frozen-lockfile --non-interactive
#RUN yarn install:${SPA_NAME} --frozen-lockfile --non-interactive