FROM node:20-alpine

# Install Yarn
RUN apk add --no-cache yarn

WORKDIR /usr/src/app/

#copy only necessary files, exclude source code from the runtime image
COPY . /

# Install dependencies
RUN yarn install --silent
RUN yarn build:ui-core
RUN yarn build:ui-essentials

EXPOSE 3002