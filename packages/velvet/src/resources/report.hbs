<html lang="en-US">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Report</title>
    <script src="https://unpkg.com/pagedjs/dist/paged.polyfill.js"></script>
    <style>
      body {
        font-family: Arial, sans-serif;
      }

      @page {
        size: A4;

        @top-center {
          content: url("https://sequentech.io/wp-content/uploads/2022/05/Sequent-logo-positive-1.svg");
        }

        @bottom-left {
          content: counter(page) " of " counter(pages);
        }
      }

      .header,
      .header-space {
        height: 100px;
      }

      .logo {
        padding-top: 10px;
      }

      .footer,
      .footer-space {
        height: 100px;
      }

      .header {
        position: fixed;
        top: 0;
        width: 100%;
        text-align: center;
      }

      .footer {
        position: fixed;
        bottom: 0;
        width: 100%;
        text-align: right;
      }

      table {
        width: 100%;
      }

      .content .title {
        text-align: center;
      }

      .content table {
        border-collapse: collapse;
        margin: 20px 0;
      }

      .content th,
      .content td {
        border: 1px solid #dddddd;
        padding: 8px;
      }

      .content th {
        text-align: center;
      }
    </style>
  </head>

  <body>
  <div class="content">
      <h1 class="title">Results of the election</h1>
      
      {{#each reports as |report|}}
        <h2>Contest: {{{report.contest.name}}}</h2>
        <p class="contest-desc">{{{report.contest.description}}}</p>

        <table>
          <tr>
            <th colspan="2">Configuration Data</th>
          </tr>
          <tr>
            <td style="width: 80%;">Tally System</td>
            <td style="width: 20%;">
              {{report.contest.voting_type}},
              {{report.contest.counting_algorithm}}
            </td>
          </tr>
          <tr>
            <td style="width: 80%;">Minimum number of option a voter can select</td>
            <td style="width: 20%;">{{report.contest.min_votes}}</td>
          </tr>
          <tr>
            <td style="width: 80%;">Maximum number of option a voter can select</td>
            <td style="width: 20%;">{{report.contest.max_votes}}</td>
          </tr>
        </table>

        <table>
          <tr>
            <th colspan="2">Participation</th>
          </tr>
          <tr>
            <td style="width: 80%;">Total number of votes cast</td>
            <td style="width: 20%;">{{report.contest_result.total_votes}}</td>
          </tr>
          <tr>
            <td style="width: 80%;">Census</td>
            <td style="width: 20%;">{{ report.contest_result.census }}</td>
          </tr>
          <tr>
            <td style="width: 80%;">Blank votes (total)</td>
            <td style="width: 20%;">{{ report.contest_result.total_blank_votes}}</td>
          </tr>
          <tr>
            <td style="width: 80%;">Explicit invalid votes</td>
            <td style="width: 20%;">{{ report.contest_result.invalid_votes.explicit }}</td>
          </tr>
          <tr>
            <td style="width: 80%;">Implicit invalid votes</td>
            <td style="width: 20%;">{{ report.contest_result.invalid_votes.implicit }}</td>
          </tr>
          <tr>
            <td style="width: 80%;">Total number of valid votes</td>
            <td style="width: 20%;">{{ report.contest_result.total_valid_votes }}</td>
          </tr>
        </table>

        <table>
          <tr>
            <th colspan="3">Candidate result</th>
          </tr>
          <tr class="">
            <td style="width: 60%;">Name</td>
            <td style="width: 20%;">Points</td>
            <td style="width: 10%;">Winning Position</td>
          </tr>
          {{#each report.candidate_result as |candidate|}}
            <tr class="">
              <td style="width: 60%;">{{candidate.candidate.name}}</td>
              <td style="width: 20%;">{{candidate.total_count}}</td>
              <td style="width: 10%;">{{candidate.winning_position}}</td>
            </tr>
          {{/each}}
        </table>
      {{/each}}

    </div>
  </body>
</html>
