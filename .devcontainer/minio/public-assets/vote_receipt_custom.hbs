<html lang="en-US">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>{{data.title}}</title>
  <script src="{{data.file_qrcode_lib}}"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: auto;
      max-width: 768px;
    }

    .logo {
      content: url("{{data.file_logo}}");
      text-align: center;
      margin: 16px auto;
    }

    .main {
      margin-top: 32px;
    }

    .main div {
      margin-top: 32px;
    }

    .id-content {
      font-family: monospace;
      padding: 6px 12px;
      background: #ecfdf5;
      color: #191d23;
      border-radius: 4px;
    }

    #qrcode {
      margin-top: 32px;
      display: flex;
      justify-content: center;
    }
  </style>
</head>

<body>
  <div class="logo"></div>

  <main class="main">
      {{{data.template}}}
  </main>
</body>

<script>
  const qrcode = new QRCode(document.getElementById("qrcode"), {
    text: "{{data.ballot_tracker_url}}",
    width: 256,
    height: 256,
    colorDark: "#000000",
    colorLight: "#ffffff",
    correctLevel: QRCode.CorrectLevel.H,
  });
</script>

</html>

