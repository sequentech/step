<html lang="en-US">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>{{title}}</title>
  <script src="{{file_qrcode_lib}}"></script>
   <style>
         body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        .next-page {
                page-break-after: always;
            }
        @media print {
            .next-page {
                page-break-after: always;
            }

            .ballot {
                margin: 0;
            }

            body {
                margin: 0;
            }

            .header,
            .footer {
                display: flex;
            }
        }

        .ballot {
            padding: 20px;
            max-width: 800px;
            margin: 0 auto;
            border: 2px solid black;
            border-top: 32px dashed black;
            border-bottom: 32px dashed black;
            border-left: 16px dashed black;
            border-right: 16px dashed black;
            box-sizing: border-box;
            height: calc(100vh - 40px);
    }
        .header {
            display: flex;
            justify-content: space-between;
            padding-bottom: 10px;
            font-size: 12px;
        }

        .header .left {
            text-align: left;
            flex: 1.5;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            justify-content: space-between;
        }

        .header .comissioner-logo {
            height: 100px;
            width: 100px;

        }

        .header .center {
            text-align: center;
            flex: 1;
        }

        .header .right {
            text-align: right;
            /* flex: 1; */
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            justify-content: space-between;
        }
        .header h2 {
            font-size: 16px;
            margin: 20px 0 0 0;
        }

        .header p {
            margin: 2px 0;
            font-size: 12px;
        }

        .header ol {
            margin: 0;
            padding-left: 20px;
            font-size: 12px;
            width: 70%;
        }

        .header .instructions-header {
            padding-top: 20px;
            font-weight: bold;
        }

        header .election-data {
            font-weight: bold;
        }

        .header .qr-code {
            flex:1

        }
        .header .qr-code img {
            width: 150px;

        }
    

        .header .signature {
            display: block;
            float: right;
            border: 1px solid black;
            text-align: center;
            vertical-align: bottom;
            width: 250px;
            height: 50px;
            margin-top: 10px;
            display: flex;
            align-items: end;
            justify-content: center;
        }

        .content {
            margin-top: 20px;
            font-size: 10px;
        }

        .section {}

        .section-title {
            border: 1px solid black;
            background-color: #007bff;
            color: white;
            padding: 5px;
            text-align: center;
        }

        .section-title.green {
            background-color: #d1e3d1;
            color: black
        }

        .section-title.blue {
            background-color: #007bff;
        }

        .candidates {
            display: flex;
            flex-wrap: wrap;
        }

        .candidates div {
            flex: 1 1 25%;
            max-width: 25%;
}
        .circle {
            display: block;
            position: relative;
            width: 100%; /* Adjust as needed */
            height: auto; /* Maintain aspect ratio */
            filter: brightness(12%); /* Darkens the image */
        }


        .candidate {
        }

        .is-blank, .is-invalid {
            padding: 5px 0 5px 5px;
            box-sizing: border-box;
            display: flex;
            align-items: center;
        }

        .is-blank .candidate-name, .is-invalid  .candidate-name {
            margin-right: 10px;
        }

        .is-blank input[type="checkbox"], .is-invalid input[type="checkbox"] {
            margin-right: 0;
        }

        input[type="checkbox"] {
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
            width: 15px;
            height: 15px;
            min-width: 15px;

            border: 2px solid #ff4620;
            border-radius: 50%;
            margin-right: 10px;
            cursor: pointer;
            position: relative;
        }

        input[type="checkbox"]:checked {
            background-color: black;
        }

        .candidate-name {
            font-size: 10px;
        }

        .footer {
            text-align: center;
            font-size: 12px;
            color: red;
            margin-top: 20px;
            display: grid;
            grid-template-columns: 1fr 4fr 1fr;
            width: 100%;
            align-items: end;
        }

        .row{
          display: flex;
          flex-direction: row;
          gap: 12px;
        }

        .summary-page {
            padding: 20px;
            margin: 0 auto;
            box-sizing: border-box;
        }

        .summary-title{
            font-weight: bold;
            font-size: 18px;
        }

        .summary-content{
            margin-inline-start: 8px;
            margin-top: 10px;
            margin-bottom: 10px;
        }
        .summary-inner-content{
            margin-inline-start: 8px;
        }
        .summary-text{
            font-size: 14px;
        }

        .summary-candidates-section{
            margin-top: 10px;
        }

    </style>
</head>

<body>
 {{{rendered_user_template}}}
</body>
</html>