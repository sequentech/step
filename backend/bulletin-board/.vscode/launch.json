    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug lib tests",
            "sourceLanguages": ["rust"],
            "initCommands":["settings set target.disable-aslr false"],
            "cargo": {
                "args": [
                    "test",
                    "--lib",
                    "--no-run",
                    "--all-features",
                    "--package=bulletin-board",
                ]
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "TRACING_LEVEL": "debug",
            },
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug server",
            "program": "${workspaceFolder}/target/debug/bulletin-board-server",
            "preLaunchTask": "cargo-build-server",
            "args": [],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": ["rust"],
            "initCommands":["settings set target.disable-aslr false"],
            "env": {
                "TRACING_LEVEL": "debug",
                "CONFIG_PATH": "/workspace/test_data/example1/config.json"
            },
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug bencharmks",
            "sourceLanguages": ["rust"],
            "initCommands":["settings set target.disable-aslr false"],
            "cargo": {
                "args": [
                    "bench",
                    "--no-run",
                    "--all-features",
                    "--bench",
                    "service",
                    "--profile",
                    "debug-bench"
                ]
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "TRACING_LEVEL": "debug",
            },
        }
    ],
    "lldb.showDisassembly": false
}
